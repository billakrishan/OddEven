<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.billak.oddeven.MainActivity">

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:hint="Enter It !.."
        android:id="@+id/edittxtOne"
        android:inputType="number"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:fontFamily="casual" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text = "Take Turn"
        android:id="@+id/btnOne"
        android:layout_below="@id/edittxtOne"
        android:editable="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOne"
        android:layout_marginTop="100dp"
        android:textAllCaps="true"
        android:text="Match Summary"
        android:textStyle="normal|bold"
        android:lineSpacingExtra="10sp"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:id="@+id/matchSummary"
        android:background="@android:color/holo_red_light"/>

    <TextView
        android:text="TotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalScore"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="34dp"
        android:textSize="18sp"
        android:layout_below="@+id/matchSummary"

         />
    <TextView
        android:text="Total Balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalBalls"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/totalScore"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalScoreC"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"

        android:layout_alignBaseline="@+id/totalScore"
        android:layout_alignBottom="@+id/totalScore"
        android:layout_alignLeft="@+id/edittxtTwo"
        android:layout_alignStart="@+id/edittxtTwo" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalBallsC"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"

        android:layout_alignBaseline="@+id/totalBalls"
        android:layout_alignBottom="@+id/totalBalls"
        android:layout_alignLeft="@+id/edittxtTwo"
        android:layout_alignStart="@+id/edittxtTwo" />

    <TextView
        android:text="oody's Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edittxtTwo"
        android:layout_alignStart="@+id/edittxtTwo" />

    <EditText
        android:layout_marginLeft="11dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:hint=""

        android:id="@+id/edittxtTwo"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/edittxtOne"
        android:layout_toEndOf="@+id/edittxtOne"
        android:layout_marginStart="11dp"
        android:textStyle="normal|bold"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Overs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalOvers"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/totalBalls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalOversC"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"

        android:layout_alignBaseline="@+id/totalOvers"
        android:layout_alignBottom="@+id/totalOvers"
        android:layout_alignLeft="@+id/totalBallsC"
        android:layout_alignStart="@+id/totalBallsC" />

    <TextView
        android:text="Your Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edittxtOne"
        android:layout_alignStart="@+id/edittxtOne" />
</RelativeLayout>
